@model ProyectoFinal.ViewModels.UsuarioVM;

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Registro.Login.css" asp-append-version="true" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
<div class="login-container">
    <div class="logo">
            <img src="~/img/logo cadillac.png" />
    </div>
    <h1>REGISTRO</h1>
        <form asp-controller="Acceso" asp-action="Registro" method="post" id="registForm" onsubmit="return handleSubmit(event)">
        <div class="cajas-group">
            <input class="form-control mb-3" type="text" placeholder="Nombre" required asp-for="nombre" />
            <input class="form-control mb-3" type="email" placeholder="Correo" required asp-for="correo" />
            <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="clave" />
            <input class="form-control mb-3" type="password" placeholder="Confiramar Contraseña" required asp-for="confirmarclave" />
        </div>
        <button type="submit" id="submitBtn">Registro</button>

         @if (ViewData["Mensaje"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewData["Mensaje"]
            </div>
        }
        Ya tienes una cuenta? <a asp-controller="Acceso" asp-action="Login">Iniciar Sesion</a>
    </form>
</div>    
</body>
</html>
